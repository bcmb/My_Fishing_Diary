<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/tv_take_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/take_photo"
        android:layout_marginLeft="@dimen/photo_dialog_horizontal_margin"
        android:layout_marginStart="@dimen/photo_dialog_horizontal_margin"
        android:layout_marginTop="@dimen/photo_dialog_vertical_margin"
        android:textSize="@dimen/photo_dialog_text_size"
        android:textColor="@color/primary_text"
        />

    <TextView
        android:id="@+id/tv_pick_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pick_image"
        app:layout_row="1"
        app:layout_column="0"
        android:layout_marginLeft="@dimen/photo_dialog_horizontal_margin"
        android:layout_marginStart="@dimen/photo_dialog_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin_top"
        android:layout_marginBottom="@dimen/photo_dialog_bottom_vertical_margin"
        android:textSize="@dimen/photo_dialog_text_size"
        android:textColor="@color/primary_text"/>

</android.support.v7.widget.GridLayout>